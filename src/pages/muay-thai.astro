---
import Layout from "@layouts/Page.astro";
import { FrequentlyAsked } from "@components/frequentlyAsked";
import { Button } from "@components/ui/button";
import { Image } from "astro:assets";
import muay_1 from "@assets/muay-thai-c-1.png";
import muay_2 from "@assets/muay-thai-c-2.png";

const muayThaiFAQs = [
  {
    question: "Is Muay Thai too aggressive for beginners?",
    answer:
      "Not at all! Every champion once started as a beginner. Training is tailored to individual capabilities and progresses at your pace.",
  },
  {
    question: "Do I need to be fit to start?",
    answer:
      "No. Muay Thai will get you in shape as you learn. Come as you are!",
  },
  {
    question: "What should I wear?",
    answer:
      "Start with comfortable sportswear. As you progress, you might consider Muay Thai shorts for greater flexibility.",
  },
  {
    question: "Can kids learn Muay Thai?",
    answer:
      "Yes! Muay Thai teaches kids discipline, respect, and self-confidence. Our classes are designed for safety and fun.",
  },
];
---

<Layout>
  <div class="px-4 md:px-0 mx-auto w-full max-w-screen-xl py-10">
    <!-- Header -->
    <section class="text-center text-white py-8">
      <span class="inline-block text-center">
        <h2 class="text-3xl font-semibold mb-2">Muay Thai</h2>
        <svg
          width="102"
          height="36"
          viewBox="0 0 102 36"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="mx-auto"
        >
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
